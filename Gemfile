source 'http://rubygems.org'

ruby '1.9.3'

# Core gems
gem 'rails', '4.0.0'

# Finance gems
gem 'yahoofinance', '~> 1.2'

# Rendering and markup gems
gem 'haml-rails', '~> 0.4'
gem 'RedCloth', '>= 4.2.9'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Authorizaion gems
gem 'devise', '~> 3.2'
gem 'cancan', '~> 1.6'

gem 'acts-as-taggable-on', '>= 2.4.1'

group :development, :test do
  gem 'sqlite3', '~> 1.3'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

group :assets do
  gem 'coffee-rails', '~> 4.0'
  gem 'sass-rails', '~> 4.0'
  gem 'uglifier', '~> 1.3'
end

group :doc do
  gem 'sdoc', require: false
end

