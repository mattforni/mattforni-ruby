= form_for @blog_post do |f|
  = f.label :title, 'Title'
  %br
  = f.text_field :title
  %br
  = f.label :short_url, 'Short Url'
  %br
  = f.text_field :short_url
  %br
  = f.label :description, 'Description (Optional)'
  %br
  = f.text_field :description
  %br
  = f.label :content, 'Content'
  %br
  = f.text_area :content
  %br
  - if @blog_post.id.nil?
    = f.submit 'Create'
  - else
    = f.submit 'Update'

