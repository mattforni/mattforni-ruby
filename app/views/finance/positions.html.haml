.link
    .wrapper
        = link_to 'Home', root_url
- if @positions.empty?
    No positions yet.
- else
    %table#positions
        %tr.visible
            %th.symbol.left
                Symbol
            %th.right
                Quantity
            %th.right
                Last Price
            %th.right
                Current Value
            %th.right
                Purchase Price
            %th.right
                Overall Change
            %th.spread
                Spread 
            %th.actions
                Actions
        - @positions.each_with_index do |position, index|
            = position_partial position, index if !position.holdings.empty?
        %tr.visible
            %th.left
                Total
            %td{colspan: 2}
            %td.number
                = currency_display @total_value
            %td
            %td.number{class: positivity_class(@total_change)}
                = currency_display @total_change
            %td{colspan: 2}
.link
    .wrapper
        = link_to 'Add', new_finance_holding_path if can?(:create, Holding)

