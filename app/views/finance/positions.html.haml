.link
    .wrapper
        = link_to 'Home', root_url
- if @positions.empty?
    No positions yet.
- else
    %table
        %tr
            %th
                Symbol
            %th.number-cell
                Last Price
            %th.number-cell
                Quantity
            %th.number-cell
                Current Value
            %th.number-cell
                Lowest Price
            %th.number-cell
                Highest Price
            %th.number-cell
                Stop
        - @positions.each_with_index do |position, i|
            - if !position.holdings.empty?
                = render partial: 'position', locals: {position: position, index: i} 
        %tr
            %th
                Total
            %td{colspan: 2}
            %td.number-cell
                = currency_display @total_value
            %td{colspan: 3}
.link
    .wrapper
        = link_to 'Add', new_finance_holding_path if can?(:create, Holding)

