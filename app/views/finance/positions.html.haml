.link
    .wrapper
        = link_to 'Home', root_url
- if @positions.empty?
    No positions yet.
- else
    %table#positions
        %tr.visible
            %th.symbol
                Symbol
            %th.number-cell
                Last Price
            %th.number-cell
                Quantity
            %th.number-cell
                Current Value
            %th.spread
                Spread 
            %th.actions
                Actions
        - @positions.each_with_index do |position, index|
            = position_partial position, index if !position.holdings.empty?
        %tr.visible
            %th
                Total
            %td{colspan: 2}
            %td.number-cell
                = currency_display @total_value
            %td{colspan: 3}
.link
    .wrapper
        = link_to 'Add', new_finance_holding_path if can?(:create, Holding)

